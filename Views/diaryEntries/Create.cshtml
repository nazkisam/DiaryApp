@model DiaryEntry
<div class="container mt-4">
<div class="row">

<div class="col-md-8 offset-md-2">
<div class class ="card">
<div class ="card-header bg-primary text-white">

<h2>Create Diary Entry</h2>

</div>

<div class ="card-body">
  <form asp-action="Create" method="post">
    
    <!--<div asp-validation-summary="All"  class="text-danger"></div>-->

    <div class="form-group mb-3">
<label asp-for="Title" class="form-lable">Title</label>
<input asp-for="Title" class="form-control" placeholder="Enter The Title"></input>
<span asp-validation-for="Title" class="text-danger"></span>

<div class="form-group mb-3">
<label asp-for="Content" row = "5" class="form-lable">Content</label>
<input asp-for="Content" class="form-control" placeholder="Enter The Content"></input>
 </div>
 <span asp-validation-for="Content" class="text-danger"></span>

<div class="form-group mb-3">
<label asp-for="Created" row = "5" class="form-lable">Date</label>
<input asp-for="Created" class="form-control" type="date"></input>
 </div>
<span asp-validation-for="Created" class="text-danger"></span>

<div class ="d-flex justify-content-between">
  <button type="submit">Create</button>
  <a asp-controller="DiaryEntries" asp-action="Index" class="btn btn-secondary">Cancel</a>
  

  </div>

</div>
</form>

</div>
</div>
</div>
</div>
</div>


@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
