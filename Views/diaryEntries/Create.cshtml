@model DiaryEntry
<div class="container mt-4">
<div class="row">

<div class="col-md-8 offset-md-2">
<div class class ="card">
<div class ="card-header bg-primary text-white">

<h2>Create Diary Entry</h2>

</div>

<div class ="card-body">
  <form asp-action="" method="post">

    <div class="form-group mb-3">
<label asp-for="Title" class="form-lable">Title</label>
<input asp-form="Title" class="form-control" placeholder="Enter The Title"></input>

<div class="form-group mb-3">
<label asp-for="Content" row = "5" class="form-lable">Content</label>
<input asp-form="Content" class="form-control" placeholder="Enter The Content"></input>
 </div>

<div class="form-group mb-3">
<label asp-for="Created" row = "5" class="form-lable">Date</label>
<input asp-form="Created" class="form-control" type="date"></input>
 </div>


</div>
</form>

</div>
</div>
</div>
</div>
</div>